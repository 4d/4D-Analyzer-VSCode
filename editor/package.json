{
	"name": "4d-analyzer",
	"displayName": "4D-Analyzer",
	"description": "LSP connector for 4D code",
	"license": "4D",
	"publisher": "4D",
	"icon": "images/4D-icon.png",
	"version": "0.2.0",
	"preview": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/4d/4D-Analyzer-VSCode"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"4D",
		"LSP",
		"4DM"
	],
	"engines": {
		"vscode": "^1.78.0"
	},
	"activationEvents": [
	],
	"main": "./out/extension",
	"contributes": {
		"languages": [
			{
				"id": "4d",
				"aliases": [
					"4D",
					"4d"
				],
				"extensions": [
					".4dm"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "4d",
				"scopeName": "source.4dm",
				"path": "./syntaxes/4d.tmLanguage.json"
			}
		],
		"semanticTokenTypes": [
			{
				"id": "command",
				"superType": "function",
				"description": "A command type."
			}
		],
		"semanticTokenScopes": [
			{
				"language": "4d",
				"scopes": {
					"command": [
						"entity.name.function.4d"
					]
				}
			}
		],
		"configuration": {
			"type": "object",
			"title": "4D Analyzer",
			"properties": {
				"4D-Analyzer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				},
				"4D-Analyzer.server.path": {
					"type": "string",
					"scope": "machine",
					"default": "",
					"markdownDescription": "Path to the 4D or 4D Server executable launched by the extension."
				},
				"4D-Analyzer.diagnostics.enable": {
					"type": "boolean",
					"scope": "machine",
					"default": true,
					"markdownDescription": "Enable/disable diagnostics"
				},
				"4D-Analyzer.server.tool4d.enable": {
					"type": "boolean",
					"scope": "machine",
					"default": true,
					"markdownDescription": "Download Tool4D"
				},
				"4D-Analyzer.server.tool4d.version": {
					"type": "string",
					"scope": "machine",
					"default": "latest",
					"pattern": "^([0-9]{2}(R[0-9]?)?)|latest$",
					"markdownDescription": "Tool4D version: 20R3, 20, ..."
				},
				"4D-Analyzer.server.tool4d.channel": {
					"type": "string",
					"scope": "machine",
					"default":"stable",
					"enum": ["stable", "beta"],
					"markdownDescription": "Tool4D download channel"
				},
				"4D-Analyzer.server.tool4d.location": {
					"type": "string",
					"scope": "machine",
					"default": "",
					"markdownDescription": "Tool4D location after download. `#4D-Analyzer.server.tool4d.enable#` should be enabled"
				}
			}
		},
		"commands": [
			{
			  "command": "4d-analyzer.updateTool4D",
			  "title": "Update tool4D to last version"
			}
		  ]
	},
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"test-compile": "tsc -p ./",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./src",
		"test": "tsc -b && sh ./scripts/e2e.sh"
	},
	"dependencies": {
		"vscode-languageclient": "^9.0.1"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/mz": "2.7.8",
		"@types/node": "~17.0.45",
		"@types/vscode": "~1.78.1",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0",
		"@vscode/test-electron": "^2.3.8",
		"esbuild": "^0.19.10",
		"eslint": "^8.56.0",
		"mocha": "^10.2.0",
		"typescript": "^5.3.3",
		"@vscode/vsce": "^2.22.0"
	}
}
