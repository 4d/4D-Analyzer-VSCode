{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/**", "**/" ]
    },
    // symbols used as brackets
    "brackets": [
        ["{", "}"],
        ["(", ")"],
        ["[", "]"]
    ],
    // symbols that are auto closed when typing
    // symbols that that can be used to surround a selection
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "autoClosingPairs" :[
        {
            "open": "If" , "close": "\nEnd if"
        },
        {
            "open": "Repeat" , "close": "Until"
        },
        {
            "open": "Case of" , "close": "\nEnd Case"
        },
        {
            "open": "While" , "close": "\nEnd While"
        },
        {
            "open": "For each" , "close": "\nEnd for each"
        },
        {
            "open": "Use" , "close": "\nEnd Use"
        },
        {
            "open": "(" , "close": ")"
        },
        { "open": "{" , "close": "}"},
        { "open": "[" , "close": "]"},
        { "open": "For" , "close": "\nEnd For","notIn": ["string", "comment"]},
        { "open": "Begin SQL" , "close": "\nEnd SQL"},
        { "open": "'", "close": "'", "notIn": ["string", "comment"] },
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "`", "close": "`", "notIn": ["string", "comment"] },
        { "open": "/**", "close": " **/", "notIn": ["string"] }
    ],
    "autoCloseBefore": ";:.,=}])>` \n\t", 
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\r\\n\\t\\f\\v ]+)|(?<=[a-zA-Z]) ?(?=[a-zA-Z])",
    "indentationRules": {
        "increaseIndentPattern": "(If|For|For each|While|Function|Begin SQL|Case of|Use|Repeat).*$",
        "decreaseIndentPattern": "(End If|End For|End for each|End While|End SQL|End case|End use|Until)$"
      }
}